<!DOCTYPE html>
<html>
<head>
  <%= favicon_link_tag 'logo.png' %>
  <title>BoulderBikeTour</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <meta name="viewport" content="initial-scale=1.0">
  <meta charset="utf-8">

  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<header role="banner">
  <div class="logo container align-items-center">
    <h1 class="col-lg-4">Rocky Mountains</h1>
    <a href="/site/home" class="col-lg-4"><%= image_tag("logo1.png", :alt => "logo", :class => "logo-main") %></a>
    <h1 class=" date col-lg-4">April 1, 2020</h1>
  </div>
  <nav id="navbar-primary" class="navbar navbar-default" role="navigation">
        <ul class="nav navbar-nav">
          <li><a href="/site/home">Home</a></li>
          <li><a href="/site/about">About</a></li>
          <li><a href="/photos">Photos</a></li>
          <li><a href="/location">Locations</a></li>
          <li><a href="/riders">Riders</a></li>
          <li><a href="/slogans">Slogan contast</a></li>
        </ul>
  </nav>
</header>

<body>
  <button onclick="topFunction()" id="myBtn" title="Go to top">Top</button>
  <div class="container jumbotron">
    <%= yield %>
  </div>
</body>

<footer class="page-footer">
  <div class="container text-center">
    <hr class="w-100 clearfix d-md-none">
    <p>BoulderBikeTour</p>
    <p>New York, NY 10012, US</p>
    <p>info@gmail.com | + 01 234 567 88</p>
  </div>
</footer>

<script>
  // When the user scrolls down 20px from the top of the document, show the button
  window.onscroll = function() {scrollFunction()};

  function scrollFunction() {
    if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
      document.getElementById("myBtn").style.display = "block";
    } else {
      document.getElementById("myBtn").style.display = "none";
    }
  }

  // When the user clicks on the button, scroll to the top of the document
  function topFunction() {
    document.body.scrollTop = 0;
    document.documentElement.scrollTop = 0;
  }
</script>

</html>
